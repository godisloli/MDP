<?xml version="1.0" encoding="utf-8"?>
<!-- Header for statistics: shared top summaries + pie charts -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- include shared summaries -->
    <include layout="@layout/view_top_summaries" />

    <!-- Biểu đồ card (kept in header so it scrolls away with list) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EE7C8"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMonthChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/month_chart_title"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Expense chart card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPieExpenseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expense_by_category"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartExpense"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#00FFFFFF" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Income chart card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPieIncomeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/income_by_category"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartIncome"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#00FFFFFF" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</merge>
