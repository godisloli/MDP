<?xml version="1.0" encoding="utf-8"?>
<!-- Inner content for statistic overview (used by activity and fragment) -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvMonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <!-- 3 ô tổng quan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:baselineAligned="false"
        android:layout_marginBottom="12dp">

        <!-- Tổng thu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/white_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_income_label"
                android:textColor="#2E7D32"/>
            <TextView
                android:id="@+id/tvTotalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_currency"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2E7D32"/>
        </LinearLayout>

        <!-- Tổng chi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_expense_label"
                android:textColor="#D32F2F"/>
            <TextView
                android:id="@+id/tvTotalExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_currency"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#D32F2F"/>
        </LinearLayout>

        <!-- Số dư -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/white_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_balance_label"
                android:textColor="@color/textPrimary"/>
            <TextView
                android:id="@+id/tvMonthBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_currency"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Biểu đồ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#7EE7C8"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMonthChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_chart_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="6dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartMonth"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#BBFDE7" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Danh sách giao dịch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transactions_label"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMonthTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"/>

</merge>
