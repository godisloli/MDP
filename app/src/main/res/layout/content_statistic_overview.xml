<?xml version="1.0" encoding="utf-8"?>
<!-- Inner content for statistic overview (used by activity and fragment) -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Danh sách giao dịch label (header moved to Activity AppBar) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transactions_label"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView: allow nested scrolling so the AppBar header above scrolls with it -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMonthTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"
        android:clipToPadding="false"
        android:paddingBottom="96dp"/>

</merge>
