<?xml version="1.0" encoding="utf-8"?>
<!-- Inner content for statistic overview (used by activity and fragment) -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- include shared summaries -->
    <include layout="@layout/view_top_summaries" />

    <!-- Biểu đồ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7EE7C8"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMonthChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/month_chart_title"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Two decorated pie chart cards: Expense (chi tiêu) and Income (thu nhập) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPieExpenseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiêu theo loại"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartExpense"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#00FFFFFF" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPieIncomeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu nhập theo loại"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartIncome"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#00FFFFFF" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Danh sách giao dịch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transactions_label"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Make RecyclerView occupy remaining space and add bottom padding to avoid nav overlap -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMonthTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:clipToPadding="false"
        android:paddingBottom="96dp"/>

</merge>
