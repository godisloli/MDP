<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_transaction"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="6dp">
            <RadioGroup
                android:id="@+id/rgType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_label"
                    android:checked="true"
                    android:textColor="@color/textDark"/>

                <RadioButton
                    android:id="@+id/rbIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_label"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/textDark"/>
            </RadioGroup>

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_hint"
                android:textColorHint="@color/textDark"
                android:inputType="text"
                android:autofillHints="none"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:textColorHint="@color/textDark"
                android:inputType="numberDecimal"
                android:autofillHints="postalAddress"
                android:layout_marginTop="12dp"

                android:background="@drawable/edittext_bg"
                android:padding="12dp" />

            <!-- Quick suggestion chips (updated as user types) -->
            <LinearLayout
                android:id="@+id/llAmountSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSuggest1"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_bg"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSuggest2"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_bg"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSuggest3"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_bg"
                    android:padding="8dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/note"
                android:textColorHint="@color/textDark"
                android:autofillHints="none"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bg" />

            <Button
                android:id="@+id/btnSaveTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_marginTop="16dp"
                android:backgroundTint="#16A34A"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnCancelTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginTop="8dp"
                android:backgroundTint="#9CA3AF"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
