<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: month + summaries + charts -->
        <include layout="@layout/view_statistic_header" />

        <!-- Content (transactions list) -->
        <include layout="@layout/content_statistic_overview" />

    </LinearLayout>

    <!-- Floating action button-like control to open the full month view -->
    <Button
        android:id="@+id/btnOpenMonthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiáº¿t"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:elevation="6dp"
        app:layout_anchorGravity="bottom|end" />

</FrameLayout>
